</div>
<!-- /Page Content -->
<!-- Add State Modal -->
<div id="add_state" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Country</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group">
                        <input type="hidden" id="hdnStateID" />
                        <label for="CountryName">Country Name</label>
                        <select id="ddl_Country" class="form-control validate"><option>Select</option></select>
                    </div>
                    <div class="form-group">
                        <label for="StateName">State Code</label>
                        <input type="text" class="form-control validate" id="txt_StateCode" placeholder="State Code" />
                    </div>

                    <div class="form-group">
                        <label for="StateName">State Name</label>
                        <input type="text" class="form-control validate" id="txt_StateName" placeholder="State Name" onkeypress="return onlyString(event)" maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="StateGstCode">State GST Code</label>
                        <input type="text" class="form-control validate" id="txt_StateGstCode" placeholder="State Gst Code" onkeypress="return isNumberKey(event)" />
                    </div>

                    <div class="submit-section">

                        <button type="button" class="btn btn-primary submit-btn" id="btnAdd" onclick="return Insert_State();">Add</button>
                        <button type="button" class="btn btn-primary submit-btn" id="btnUpdate" onclick="Update_State();" style="display:none">Update</button>
                        <button type="button" class="btn btn-primary submit-btn" id="btnAdd" onclick="return Clear_State();">Clear</button>

                    </div>


                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="errMsg alert-box alert-success border-0 disabled" role="alert">
                            @*<button type="button" class="close" data-dismiss="alert" >
                                    <span aria-hidden="true">×</span>
                                </button>*@
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="errMsg1 alert-box alert-danger border-0 disabled" role="alert">
                            @*<button type="button" class="close" data-dismiss="alert" >
                                    <span aria-hidden="true">×</span>
                                </button>*@
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /Add State Modal -->
<!-- Delete State Modal -->
<div class="modal custom-modal fade" id="delete_state" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3>Delete State</h3>
                    <p>Are you sure want to delete?</p>
                </div>
                <div class="modal-btn delete-action">
                    <div class="row">
                        <div class="col-6">

                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary continue-btn" onclick="return DeleteState();">Delete</a>
                        </div>
                        <div class="col-6">
                            <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn" onclick="return Clear_State();">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Delete State Modal -->





