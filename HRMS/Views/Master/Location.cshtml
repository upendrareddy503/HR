                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>
<div id="add_location" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Location</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">

                        <div class="col-sm-6">

                            <input type="hidden" id="hid" />
                            <div class="form-group">
                                <label for="CompanyName">Location Name</label>
                                <input type="text" class="form-control" id="txt_Location" placeholder="Location Name" />
                            </div>
                            <div class="form-group">
                                <label for="Code">Code</label>
                                <input type="text" class="form-control" id="txt_Code" placeholder="Code" />
                            </div>
                            <div class="form-group">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" id="txt_Address" placeholder="Address" />
                            </div>
                            <div class="form-group">
                                <label for="City">City</label>

                                <input type="text" class="form-control" id="txt_City" placeholder="City" />
                            </div>
                            <div class="form-group">
                                <label for="District">District</label>
                                <input type="text" class="form-control" id="txt_District" placeholder="District" />
                            </div>
                            <div class="form-group">
                                <label for="State">State</label>
                                <select id="ddl_State" class="select form-control"><option>Select</option></select>
                                @*<input type="text" class="form-control" id="txt_State" placeholder="State" />*@
                            </div>
                            <div class="form-group">
                                <label for="Country">Country</label>
                                <select id="ddl_Country" class="select form-control"><option>Select</option></select>
                                @*<input type="text" class="form-control" id="txt_Country" placeholder="Country" />*@
                            </div>
                            <div class="form-group">
                                <label for="PhoneNo">PhoneNo</label>
                                <input type="text" class="form-control" id="txt_PhoneNo" placeholder="PhoneNo" />
                            </div>
                            <div class="form-group">
                                <label for="EstDate">EstDate</label>

                                <input type="text" id="datepicker" class="form-control" placeholder="01/01/1999">

                            </div>
                          
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="EmailID">EmailID</label>
                                <input type="text" class="form-control" id="txt_EmailID" placeholder="EmailID" />
                                <span class="error_show form-text has-danger" id="spEmailValid">Please Enter Valid Email!.</span>
                            </div>
                            <div class="form-group">
                                <label for="GST">GST</label>
                                <input type="text" class="form-control" id="txt_GST" placeholder="GST" />
                            </div>
                            <div class="form-group">
                                <label for="Tan">Tan Number</label>
                                <input type="text" class="form-control" id="txt_Tan" placeholder="Tan Number" />
                            </div>

                            <div class="form-group">
                                <label for="Pan">Pan No</label>
                                <input type="text" class="form-control" id="Pan" placeholder="Pan Number" />
                            </div>
                            <div class="form-group">
                                <label for="Website">Website</label>
                                <input type="text" class="form-control" id="txt_Website" placeholder="Website" />
                            </div>
                            <div class="form-group">
                                <label for="Website">ESI No</label>
                                <input type="text" class="form-control" id="txt_ESI" placeholder="ESI" />
                            </div>

                            <div class="form-group">
                                <label for="Website">PF No</label>
                                <input type="text" class="form-control" id="txt_PFno" placeholder="PF No" />
                            </div>
                            <div class="form-group">
                                <label for="Website">Other Details</label>
                                <input type="text" class="form-control" id="txt_otherinfo" placeholder="Other Details" />
                            </div>

                        </div>

                        <div class="modal-footer">
                            
                            <button type="button" class="btn btn-primary" id="btnUpdate" onclick="Update_Location();">Update</button>
                            <button type="button" class="btn btn-default" onclick="clearTextBox();">Close</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>
