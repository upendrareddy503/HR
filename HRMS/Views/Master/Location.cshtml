    <!-- /Page Header -->
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-0">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblLocation" class="table table-stripped mb-0">
                            <thead>
                                <tr>
                                    @*<th style="width: 30px;">#</th>*@
                                    @*<th>Sno</th>*@
                                    <th>Location Name</th>
                                    <th>Address</th>
                                    <th>Code</th>
