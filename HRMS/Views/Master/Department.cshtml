        <div class="panel-body">
            <button type="button" class="btn-white" data-toggle="modal" data-target="#myModal" onclick="closeTextBox();">Add Department</button>
            <div class="container">
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" onclick="closeTextBox();">&times;</button>
                                <h4 class="modal-title">Add Department</h4>
                            </div>
                            <div class="modal-body">
                                <form>

                                    <input type="hidden" id="hdnDepartmentID" />

                                    <div class="form-group">
                                        <label for="DivisionName">Division Name</label>
                                        <select id="ddl_Division"><option>Select</option></select>
                                    </div>
                                    <div class="form-group">
                                        <label for="DepartmentName">Department Name</label>
                                        <input type="text" class="form-control" id="txt_DepName" placeholder="Department Name" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddDepartment();">Add</button>
                                <button type="button" class="btn btn-primary" id="btnUpdate" onclick="UpdateDepartment();" style="display:none">Update</button>
                                <button type="button" class="btn btn-default" onclick="closeTextBox();">Close</button>


                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="errMsg alert-box alert-success border-0 disabled" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="errMsg1 alert-box alert-danger border-0 disabled" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>

